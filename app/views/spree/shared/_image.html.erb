<% size ||= :mini %>
<% itemprop ||= nil %>

<% if image && image.attachment? %>
  <% if itemprop %>
    <%= image_tag image.attachment(size), itemprop: itemprop, class: 'shared-image' %>
  <% else %>
    <%= image_tag image.attachment(size), class: 'shared-image' %>
  <% end %>
<% else %>
  <span class="image-placeholder <%= size %>"></span>
<% end %>
